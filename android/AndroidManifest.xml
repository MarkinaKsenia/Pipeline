<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.markinaksenia.pipeline" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:isGame="true"
        android:appCategory="game"
        android:label="Построй трубопровод"
        android:theme="@style/GdxTheme" >

        <activity
            android:name="com.markinaksenia.pipeline.Menu"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
         </activity>
        <activity
            android:name="com.markinaksenia.pipeline.AndroidLauncher"
            android:label="@string/app_name" 
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout">
        </activity>
        <activity android:name="com.markinaksenia.pipeline.Home"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name="com.markinaksenia.pipeline.Start"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name="com.markinaksenia.pipeline.Done"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name="com.markinaksenia.pipeline.Playing"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name="com.markinaksenia.pipeline.Raiting"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

        <activity android:name="com.markinaksenia.pipeline.Categories"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:theme="@style/Theme.AppCompat.NoActionBar">
        </activity>

    </application>

</manifest>
